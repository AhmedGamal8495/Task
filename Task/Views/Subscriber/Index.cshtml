@using Task.Models
@model IEnumerable<NwcSubscriberFile>

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:10px;" ></h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-dark" >
    <thead>
        <tr>
            <th scope="col">
                ID
            </th>
            <th scope="col">
                اسم المشترك
            </th>
            <th scope="col">
                المدينه
            </th>
            <th scope="col">
                المنطقه
            </th>
            <th scope="col">
                رقم الهاتف
            </th>
            <th scope="col">
                ملاحظات
            </th>
            
            <th scope="col">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.NwcSubscriberFileId)
                </td>
                <td scope="row">
                @Html.DisplayFor(modelItem => item.NwcSubscriberFileName)
            </td>
                <td scope="row">
                @Html.DisplayFor(modelItem => item.NwcSubscriberFileCity)
            </td>
                <td scope="row">
                @Html.DisplayFor(modelItem => item.NwcSubscriberFileArea)
            </td>
                <td scope="row">
                @Html.DisplayFor(modelItem => item.NwcSubscriberFileMobile)
            </td>
                <td scope="row">
                @Html.DisplayFor(modelItem => item.NwcSubscriberFileReasons)
            </td>
                
                <td scope="row">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.NwcSubscriberFileId">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NwcSubscriberFileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
